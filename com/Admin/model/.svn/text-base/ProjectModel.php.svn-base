		function getProjectList(){
			$q= "SELECT p.*,u.username
				FROM tbl_project p
				LEFT JOIN gm_user u
				ON u.userID = p.userID";
			$this->open(0);
			$r = $this->fetch($q,1);
			$this->close();
			return $r;
		}
		
		function insertBudget($data){
			$q = "INSERT INTO tbl_project_budget (id_project,budget) VALUES ('".$data['project']."','".$data['budget']."')";
			$this->open(0);
			$r = $this->query($q);
			$this->close();
			return $r;
		}
		
		function getUser(){
			$q=	"SELECT userID, username
